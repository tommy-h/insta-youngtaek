<% if current_user == @post.user %>
  <%= link_to( "Edit", edit_post_path(@post) ) %> |
  <%= link_to( "Delete", @post, method: :delete ) %>
<% end%>

<div>
  <%= image_tag @post.image.url, class:"img-fluid" %>
  <p>
    <%= @post.user.email %><br>
    <%= @post.content %>
  </p>
</div>
